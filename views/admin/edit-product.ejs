<!DOCTYPE html>
<html>
<head>
  <%- include('../partial/admin-partial/_bootstrap_files.ejs')%>
    <style>
      .navbar {
        background-color: #192537;
      }
      .nav-item {
        color: #4e4719;
      }

      #input{
        width: 400px;
        margin-left: 60px;
      }
      .btn{
        margin-left: 300px;
        margin-top: 20px;
      }
    </style>
</head>

<body>
  <%- include('../partial/admin-partial/_admin_nav.ejs')%>
<form action="/product/update-product" method="post" enctype="multipart/form-data">
 <div class="container"> 
  <input type="hidden" name="id" class="form-control" value="<%=pDetails[0].id%>" />
      <div class="form-group">
        <label>Enter Product Name</label>
        <input type="text" name="p_name" class="form-control" id="input2" value="<%=pDetails[0].p_name%>"/>
      </div>

      <div class="form-group">
        <label>Category</label>
        <select name="cat_id" class="form-control" id="input2">
            <option value="<%=pDetails.cat_id%>">select category</option>
            <%for(category of categories){%>
               <option value="<%=category.id%>"><%=category.cat_name%></option>
            <%}%>    
        </select>
      </div>
      
      <div class="form-group">
        <label>Enter Product Price</label>
        <input type="text" name="p_price"class="form-control" id="input2" value="<%=pDetails[0].p_price %>"/>
      </div>
      <div class="form-group">
        <label>Enter Product Quantity</label>
        <input type="text" name="p_qty"class="form-control" id="input2" value="<%=pDetails[0].p_qty%>"/>
      </div>
      <div class="form-group">
        <label>Enter Product Size</label>
        <input type="text" name="p_size"class="form-control" id="input2" value="<%=pDetails[0].p_size%>"/>
      </div>
      <div class="form-group">
        <label>Enter Product Description</label>
        <!-- <input type="text" name="description"class="form-control" value="<%=pDetails[0].description%>"/> -->
        <textarea id="" name="description" id="input2" rows="3" cols="90" class="form-control" value="<%=pDetails[0].description%>"></textarea>
      </div>
      <div class="row">
       <div class="col-md-6 pl-5"> 
      <div class="form-group">
        <label>Enter Front Image </label>
        <img src="/admin/images/<%=pDetails[0].p_imagefront%>"  height="350px" width="250px"><br><br>
        <input type="file" name="p_imagefront"class="form-control" id="input" value="<%=pDetails[0].p_imagefront%>"/>
      </div>
      <div class="form-group">
        <label>Enter Back Image</label>
        <img src="/admin/images/<%=pDetails[0].p_imageback%>"  height="350px" width="250px"><br><br>
        <input type="file" name="p_imageback"class="form-control" id="input" value="<%=pDetails[0].p_imageback%>"/>
      </div>
      </div>
      <div class="col-md-6 pl-5">
      <div class="form-group">
        <label>Enter Right Image</label>
        <img src="/admin/images/<%=pDetails[0].p_imageright%>"  height="350px" width="250px"><br><br>
        <input type="file" name="p_imageright"class="form-control" id="input" value="<%=pDetails[0].p_imageright%>"/>
      </div>
      <div class="form-group">
        <label>Enter Left Image</label>
        <img src="/admin/images/<%=pDetails[0].p_imageleft%>"  height="350px" width="250px"><br><br>
        <input type="file" name="p_imageleft"class="form-control" value="<%=pDetails[0].p_imageleft%>"/>
      </div>
    </div>
    </div>
      <!-- <div class="form-group">
        <label>Upload Images(Fornt view, Back view, Left view, Rigth view)</label>
        <br><input type="file" name="productImages" multiple />
      </div> -->

      <div class="form-group">
        <button class="btn btn-danger">Cancel</button>
        <button class="btn btn-success" type="Submit">Update</button>
      </div>
  
 </div>
</form>
</body>
</html>

